{% extends 'base.html.twig' %}

{% block title %}Departament index{% endblock %}

{% block body %}
    <h1>Departament index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departament in departaments %}
            <tr>
                <td>{{ departament.id }}</td>
                <td>{{ departament.description }}</td>
                <td>
                    <a href="{{ path('app_departament_show', {'id': departament.id}) }}">show</a>
                    <a href="{{ path('app_departament_edit', {'id': departament.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_departament_new') }}">Create new</a>
{% endblock %}
