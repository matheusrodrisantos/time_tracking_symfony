{% extends 'base.html.twig' %}

{% block title %}Holiday{% endblock %}

{% block body %}
    <h1>Holiday</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ holiday.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ holiday.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ holiday.date ? holiday.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Every_year</th>
                <td>{{ holiday.everyYear }}</td>
            </tr>
            <tr>
                <th>Holiday_bridge</th>
                <td>{{ holiday.holidayBridge ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Half_day_friday</th>
                <td>{{ holiday.halfDayFriday ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_holiday_index') }}">back to list</a>

    <a href="{{ path('app_holiday_edit', {'id': holiday.id}) }}">edit</a>

    {{ include('holiday/_delete_form.html.twig') }}
{% endblock %}
