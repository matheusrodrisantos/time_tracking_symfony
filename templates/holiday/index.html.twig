{% extends 'base.html.twig' %}

{% block title %}Holiday index{% endblock %}

{% block body %}
    <h1>Holiday index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>Every_year</th>
                <th>Holiday_bridge</th>
                <th>Half_day_friday</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for holiday in holidays %}
            <tr>
                <td>{{ holiday.id }}</td>
                <td>{{ holiday.name }}</td>
                <td>{{ holiday.date ? holiday.date|date('Y-m-d') : '' }}</td>
                <td>{{ holiday.everyYear }}</td>
                <td>{{ holiday.holidayBridge ? 'Yes' : 'No' }}</td>
                <td>{{ holiday.halfDayFriday ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_holiday_show', {'id': holiday.id}) }}">show</a>
                    <a href="{{ path('app_holiday_edit', {'id': holiday.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_holiday_new') }}">Create new</a>
{% endblock %}
