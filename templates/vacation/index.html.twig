{% extends 'base.html.twig' %}

{% block title %}Vacation index{% endblock %}

{% block body %}
    <h1>Vacation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Initial_date</th>
                <th>Final_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vacation in vacations %}
            <tr>
                <td>{{ vacation.id }}</td>
                <td>{{ vacation.initialDate ? vacation.initialDate|date('Y-m-d') : '' }}</td>
                <td>{{ vacation.finalDate ? vacation.finalDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_vacation_show', {'id': vacation.id}) }}">show</a>
                    <a href="{{ path('app_vacation_edit', {'id': vacation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vacation_new') }}">Create new</a>
{% endblock %}
